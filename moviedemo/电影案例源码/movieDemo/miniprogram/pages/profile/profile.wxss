/* pages/profile/profile.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
} 
.userinfo {
  height:555rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}

.usermotto {
  margin-top: -100px;
  color:white;
  font-family: "微软雅黑"
}
.message{
  flex:1;
  margin-top:200rpx;
  height:100%;
  font-family: '宋体';
  color: #1a2a3a;
}
.imgbox{
  position: absolute; 
  width:100%;
  height:555rpx;
  top: 0px;
  left: 0px;
  z-index: -1;
  filter: blur(5px);
}
.img{
width:100%;
height:100%;
}
.mask{
  position:absolute;
  width:100%;
  height:555rpx;
  background-color: rgba(0,0,0,0.3);
  top:0;
  left:0;
  z-index: -1;
}
.section{
  margin-top:100rpx;
  height:100rpx;
}
.content{
  width:80%;
  margin-top: 50rpx
}