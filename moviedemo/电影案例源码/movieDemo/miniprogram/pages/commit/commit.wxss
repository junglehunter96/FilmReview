.detail-index{
  width:100%;
  height:400rpx;
  filter:blur(40rpx);
  opacity: 0.4;
}
.detail-mask{
  position:absolute;
  width:100%;
  height:400rpx;
  background-color: #333;
  top:0;
  left:0;
  z-index: -1;
}

.detail-info{
  position: absolute;
  top:0;
  left:0;
  z-index:1;
  display: flex;
  width:100%;
  height:400rpx;
  color:white;
  font-size:35rpx;
}
.detail-img{
  margin-top:20rpx;
  width:280rpx;
  height:90%
}
.detail-mn{
 flex:1;
 margin-top:20rpx;
 margin-left:50rpx;
 line-height: 50rpx;
}
.detail-title{
  font-size:40rpx;
  font-weight: bolder;
  height:60rpx;
}
.detail-score{
  font-size:37rpx;
  color:#faaf00;
}
.detail-summary{
  height: 330rpx; 
  font-family: "宋体";
  font-size:30rpx;
  color:#ccc;
  line-height: 50rpx; 
  border-bottom: 1px solid #ccc;
  background-color: rgb(43, 38, 38);
  margin-bottom: 20rpx;
} 
